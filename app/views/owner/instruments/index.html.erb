<%= render 'navbar/profile_navbar' %>
<h1 class="text-center page-title">MY INSTRUMENTS</h1>

  <% @instruments.each do |instrument| %>
  <div class="instruments-list">
    <% if instrument.photo? %>
      <%= cl_image_tag instrument.photo.path, width: 70, height: 70, crop: :fill %>
    <% else %>
    <%= cl_image_tag("",
                 :width => 100, :height => 100,
                 :crop => :thumb, :gravity => :face, :radius => 20,
                 :default_image => "avatar.png") %>
    <% end %>
    <div class="instrument-category">
      <p><strong>Name : </strong><%= instrument.name %></p>
      <p><strong>Category : </strong><%= instrument.category %></p>
    </div>
    <div class="instrument-list-body">
      <p><strong>Description : </strong><%= instrument.description %></p>
      <p><strong>Price : </strong><%= instrument.daily_price %> â‚¬/day</p>
      <p><strong>Address : </strong><%= instrument.address %></p>
    </div>
    <div class="btn-view">
      <%= link_to "View", instrument_path(instrument), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
