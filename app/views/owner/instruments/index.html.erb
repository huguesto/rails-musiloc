<h1 class="text-center">My Instruments</h1>

  <% @instruments.each do |instrument| %>
  <div class="instruments-list">
    <% if instrument.photo? %>
      <%= cl_image_tag instrument.photo.path, width: 200, height: 300, crop: :fill %>
    <% else %>
    <%= cl_image_tag("",
                 :width => 100, :height => 100,
                 :crop => :thumb, :gravity => :face, :radius => 20,
                 :default_image => "avatar.png") %>
    <% end %>
    <div class="instrument-category">
      <p><strong>Name : <%= instrument.name %></strong></p>
      <p><strong><%= instrument.category %></strong></p>
    </div>
    <div class="instrument-list-body">
      <p>Description : <%= instrument.description %></p>
      <p>Daily price : <%= instrument.daily_price %></p>
      <p>Address : <%= instrument.address %></p>
    </div>
  </div>
<% end %>
