<div class="container form_sign_in">
  <div class="col-md-4 col-md-offset-4 center-btn">
    <%= render "devise/shared/link-sign-in-facebook" %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs">
      <div class="col-md-4 col-md-offset-4">
        <%= f.input :email, required: false, autofocus: true %>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= f.input :password, required: false %>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="col-md-4 col-md-offset-4">
    <%= render "devise/shared/link-sign-in-password" %>
  </div>
      <div class="col-md-4 col-md-offset-4 center-btn">
        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
        </div>
      </div>
    </div>


  <% end %>

</div>
